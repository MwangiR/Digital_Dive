<div class="uk-container" uk-grid>
  <div class="uk-width-expand">
    <div
      class="uk-card uk-card-small uk-padding-large uk-card-hover uk-card-default uk-width-2xlarge"
    >
      <div class="uk-card-title uk-flex uk-flex-between">{{post.title}}
        <button
          class="uk-button uk-button-primary uk-margin-small-right"
          type="button"
          uk-toggle="target: #modal-example-{{id}}"
        >Edit Post</button>
      </div>
      <div class="uk-card-body">You posted: {{comment_text}}</div>
    </div>
  </div>
</div>