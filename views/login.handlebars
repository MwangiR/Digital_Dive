<form class="uk-form-horizontal uk-margin-large login-form">

  <div class="uk-margin">
    <label class="uk-form-label" for="form-horizontal-text">Email</label>
    <div class="uk-form-controls">
      <input
        class="uk-input email-login"
        id="form-horizontal-text "
        type="text"
        placeholder="Some text..."
      />
    </div>
  </div>

  <div class="uk-margin">
    <label class="uk-form-label" for="form-horizontal-text">Password</label>
    <div class="uk-form-controls">
      <input
        class="uk-input password-login"
        id="form-horizontal-text "
        type="text"
        placeholder="Some text..."
      />
    </div>
  </div>

  <button
    class="uk-button uk-button-default uk-width-1-1 uk-margin-small-bottom"
    type="submit"
  >Login</button>
</form>

<form class="uk-form-horizontal uk-margin-large signup-form">

  <div class="uk-margin">
    <label class="uk-form-label" for="form-horizontal-text">Username: </label>
    <div class="uk-form-controls">
      <input
        class="uk-input username-signup"
        id="form-horizontal-text "
        type="text"
        placeholder="Some text..."
      />
    </div>
  </div>

  <div class="uk-margin">
    <label class="uk-form-label" for="form-horizontal-text">Email: </label>
    <div class="uk-form-controls">
      <input
        class="uk-input email-signup"
        id="form-horizontal-text "
        type="text"
        placeholder="Some text..."
      />
    </div>
  </div>

  <div class="uk-margin">
    <label class="uk-form-label" for="form-horizontal-text">Password: </label>
    <div class="uk-form-controls">
      <input
        class="uk-input password-signup"
        id="form-horizontal-text "
        type="text"
        placeholder="Some text..."
      />
    </div>
  </div>

  <button class="uk-button uk-button-default uk-width-1-1 uk-margin-small-bottom" type="submit">Sign
    Up</button>
</form>

<script src="./js/login.js"></script>